pipeline {
   
     def deploypath='workspace\\pipeline\\PipelineSource\\Pipeline\\target'
     def jenkishome = "${JENKINS_HOME}"
     def warpath= jenkishome+deploypath
   
    agent any
   
           		
    stages {
        stage('Build') 
        {
            steps 
            {
                echo 'Building.....'
                dir('PipelineSource\\Pipeline')
                 {
                    bat 'mvn clean compile'  
                 }
                
            }
         }
         stage('Test') 
         {
            steps 
            {
                echo 'Running Tests.....'
                dir('PipelineSource\\Pipeline') 
                {
                     bat 'mvn clean package -P qa' 
                }
               
            }
          }
           
           stage('Deploy')
            {
               steps 
           		 {
              	  echo 'Running Deploy.....'
             	  echo "${warpath}"
             	  
           		 }
        	}
    }
}